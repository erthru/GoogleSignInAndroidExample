<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:padding="16dp">
        <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/ic_launcher_background"
                android:id="@+id/userImg"
                android:scaleType="centerCrop" android:layout_gravity="center_horizontal"
                tools:ignore="VectorDrawableCompat" android:visibility="gone"/>
        <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/userName" android:textAlignment="center"
                android:layout_marginTop="8dp" android:visibility="gone"/>

        <Button
                android:text="Logout"
                android:layout_width="140dp"
                android:layout_height="wrap_content" android:id="@+id/btnLogout"
                android:layout_gravity="center_horizontal" android:layout_marginTop="10dp"
                style="@style/Widget.AppCompat.Button.Colored" android:visibility="gone"/>
        <com.google.android.gms.common.SignInButton
                android:id="@+id/btnLogin"
                android:layout_width="150dp"
                android:layout_height="wrap_content" android:layout_gravity="center_horizontal"/>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>